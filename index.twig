{% extends 'soho.layout.twig' %}

{% block content %}
    <div class="articles">
        {% for post in posts %}
        <div class="article">
            <div class="article-image"><a href="/{{ post.url }}"><img src="{{ post.cover.small.url }}"/></a></div>
            <div class="article-text"><a href="/{{ post.url }}">{{ post.title }}</a></div>
        </div>
        
        {% endfor %}
        <div class="clearfix"></div>
        {% if prevPage %}
        <div class="text-right"><a href="/all/{{ prevPage }}">&laquo; newer</a></div>
        {% endif %}
        {% if nextPage %}
        <div class="text-right"><a href="/all/{{ nextPage }}">older &raquo;</a></div>
        {% endif %}
    </div>
{% endblock %}