<h2>Settings</h2>

<div class="row">
        
    <div class="small-2 large-3 columns">
        <label for="logo">Logo image</label>
    </div>
    <div class="small-7 large-9 columns">
        <img src="{{ settings.logo.url }}?{{ 'now'|date('U') }}" alt="">
        <input type="file" name="logo">
        <input type="hidden" name="_logo_w" value="400">
        <input type="hidden" name="_logo_h" value="100">
        <small>For better results use an image 400x100</small>
    </div> 
        
</div>



